<?xml version="1.0" encoding="ISO-8859-1" ?>

<OrzHTTPd>
    <Settings>
	<Item name="User" type="string">www</Item>
	<Item name="Port" type="numeric">80</Item>
	<Item name="Host" type="string">orz.byshen.net</Item>
	<Item name="Document Root" type="string">/usr/local/www/data</Item>
	<Item name="Virtual Host Root" type="string">/usr/local/www/vhost</Item>
	<Item name="Error Messages" type="string">/usr/local/www/error</Item>
	<Item name="Index File" type="string">index.html</Item>
	<Item name="User Directory" type="string">public_html</Item>
	<Item name="Access Log" type="string">/usr/local/www/log/orzhttpd.access.log</Item>
	<Item name="Error Log" type="string">/usr/local/www/log/orzhttpd.error.log</Item>
	<Item name="Login Password" type="string">orzhttpd:orzhttpd</Item>
    </Settings>
    <Features>
	<Option name="User Home Directories">on</Option>
	<Option name="Directory Listing">on</Option>
	<Option name="Logging">on</Option>
	<Option name="Custom Error Messages">on</Option>
	<Option name="Virtual Hosts">off</Option>
	<Option name="Chroot">off</Option>
    </Features>
</OrzHTTPd>

